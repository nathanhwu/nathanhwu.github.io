const pageTitle = "About | Nathan Wu";
const description = "Nathan Wu is a PhD student in Neuroscience at Harvard University. His interests include computational neuroscience, biophysics, and complex systems.";
---
<Layout pageTitle={pageTitle} description={description}>
    
    <div class="headshot">
